a := 0;

writeln "while a < 5";
loop while a < 5 do
    writeln "Value of a = ", a;
    a := a + 1
end;

a := 0;
writeln "until a = 5";

loop until a = 5 do
    writeln "Value of a = ", a;
    a := a + 1
end;

